{
  "manifest_version": 3,
  "name": "Jira Memory Tracker",
  "version": "1.3",
  "description": "Track Jira tickets you open and remember context.",
  "permissions": ["activeTab"],
  "host_permissions": ["https://*.atlassian.net/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/browse/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
