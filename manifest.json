{
  "manifest_version": 3,
  "name": "Jira Memory Tracker",
  "description": "Track Jira status, effort, and private notes locally.",
  "version": "1.0.0",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.atlassian.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.atlassian.net/browse/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
