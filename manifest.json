{
  "manifest_version": 3,
  "name": "Jira Memory Tracker",
  "version": "1.1",
  "description": "Track Jira tickets across queues with notes and CSV export.",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Jira Memory Tracker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/browse/*"],
      "js": ["content.js"]
    }
  ]
}
